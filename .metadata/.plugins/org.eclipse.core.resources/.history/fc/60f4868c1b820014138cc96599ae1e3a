import java.util.Scanner;
public class one 
	{
	  public static void main(String[] args) 
	{
	    int n;
	 
	    Scanner input = new Scanner(System.in);
	    System.out.println("Input an integer");
	    n = input.nextInt(); 
	 
	    while (true) 
	{
	    System.out.println("You entered " + n);
	    System.out.println("Input an integer");
	    n = input.nextInt();
	}
	}
	}

	

